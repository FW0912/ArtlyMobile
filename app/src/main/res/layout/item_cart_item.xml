<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingRight="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_item_cart_item_image"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_cart_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Product Name"/>

        <TextView
            android:id="@+id/tv_item_cart_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Product Price"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Stock: "/>

            <TextView
                android:id="@+id/tv_item_cart_item_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:text="Product Stock"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cart_item_details"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:text="Details"/>

            <Button
                android:id="@+id/btn_cart_item_remove"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:backgroundTint="@color/red"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Remove"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cart_item_decrement_quantity"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="-"/>

            <EditText
                android:id="@+id/et_cart_item_quantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:background="@drawable/input_field_background"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="1"
                android:hint="Qty"/>

            <Button
                android:id="@+id/btn_cart_item_increment_quantity"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="+"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>