<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_background"
    tools:context=".view.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20sp"
            android:gravity="top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:src="@drawable/artlybrandimage"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inria_serif"
                    android:paddingBottom="5sp"
                    android:text="Artly"
                    android:textSize="32sp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50sp"
                android:gravity="center_horizontal|center">

                <ImageView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:src="@drawable/ic_profile"/>

                <TextView
                    android:id="@+id/tv_profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="username"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="balance : "/>

            <TextView
                android:id="@+id/tv_profile_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:text="balance"/>

        </LinearLayout>

        <Button
            android:layout_width="144sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Topup"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <Button
                android:id="@+id/btn_account_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_profile_background"
                android:text="Account Information"
                android:textSize="16sp"
                android:drawableEnd="@drawable/arrow_right"
                android:gravity="start|center_vertical"
                android:textAllCaps="false"
                android:padding="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <Button
                android:id="@+id/btn_transaction_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_profile_background"
                android:text="Transaction History"
                android:textSize="16sp"
                android:drawableEnd="@drawable/arrow_right"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                android:padding="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="24sp"
                android:layout_marginTop="30sp"
                android:drawableStart="@drawable/ic_logout"
                android:textAllCaps="false"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="18dp"/>
        </LinearLayout>



    </LinearLayout>

</FrameLayout>