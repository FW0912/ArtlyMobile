<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/body_background"
    tools:context=".view.TransactionDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_account_information_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_back_arrow"
            android:textAllCaps="false"
            android:text="Back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20sp"
            android:gravity="top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:src="@drawable/artlybrandimage"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inria_serif"
                    android:paddingBottom="5sp"
                    android:text="Artly"
                    android:textSize="32sp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50sp"
                android:gravity="center_horizontal|center"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:src="@drawable/ic_profile"/>

                <TextView
                    android:id="@+id/tv_account_information_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="username"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:text="Fullname"
                    android:textColor="@color/primary"/>

                <EditText
                    android:id="@+id/ET_account_information_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:text="Email"
                    android:textColor="@color/primary"/>

                <EditText
                    android:id="@+id/ET_account_information_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:text="Password"
                    android:textColor="@color/primary"/>

                <EditText
                    android:id="@+id/ET_account_information_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/primary"/>

                <DatePicker
                    android:id="@+id/dp_account_information_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarTextColor="@color/white"
                    android:datePickerMode="calendar"
                    android:theme="@style/CustomDatePickerStyle"
                    android:background="@drawable/date_picker_background"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:calendarViewShown="true"
                    android:spinnersShown="false"
                    android:startYear="1900"
                    android:endYear="2500"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_account_information_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="24sp"
                android:layout_marginTop="30sp"
                android:textAllCaps="false"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="18dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>